@article{hillgrove_impact_2011,
  title = {The Impact of Temporary Deferral Due to Low Hemoglobin: Future Return, Time to Return, and Frequency of Subsequent Donation},
  shorttitle = {The Impact of Temporary Deferral Due to Low Hemoglobin},
