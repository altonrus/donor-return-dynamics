@article{schlumpf_factors_2008,
  title = {Factors Influencing Donor Return},
  author = {Schlumpf, Karen S. and Glynn, Simone A. and Schreiber, George B. and Wright, David J. and Randolph Steele, Whitney and Tu, Yongling and Hermansen, Sigurd and Higgins, Martha J. and Garratty, George and Murphy, Edward L. and {National Heart, Lung, and Blood Institute Retrovirus Epidemiology Donor Study}},
